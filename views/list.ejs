
<%- include('header') -%>
<body>
    <div class="box" id="heading">
        <h1> <%= listtitle %> </h1>
    </div>

    <div class="box">
        <%  newItems.forEach(function(element){  %>
            <form action="/delete" method="post">
            <div class="item">
                <input name="checkbox" type="checkbox" value="<%= element._id %>" onchange="this.form.submit()">
                <p><%=element.name%></p>
            </div>
            <input type="hidden" name="listName" value="<%= listtitle %>">
            </form>
       <% }) %>

    <form class="item" action="/" method="post">
    <input type="text" name="work" placeholder="Add Item" >
    <button type="submit" name="list" value="<%= listtitle %>" >+</button>
    </form>
</div>
<%- include('footer') -%>
</body>
</html>